      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Build APK + Web to docs (no push)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\tool\\build_all.ps1",
        "-BaseHref", "/mti_pontianak/"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}